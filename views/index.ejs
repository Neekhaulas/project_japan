<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flight Price Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold text-center mb-8 text-gray-800">Flight Price Tracker</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <% Object.entries(priceData).forEach(([routeId, data]) => { %>
                <div class="bg-white rounded-lg shadow-lg p-6">
                    <h2 class="text-2xl font-semibold mb-4 text-gray-700">
                        <%= routeId.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' → ') %>
                    </h2>
                    <div class="h-64">
                        <canvas id="chart-<%= routeId %>"></canvas>
                    </div>
                    <div class="mt-4">
                        <h3 class="text-lg font-medium text-gray-600">Latest Prices</h3>
                        <div class="mt-2 space-y-2">
                            <% data.slice(-5).reverse().forEach(record => { %>
                                <div class="flex justify-between items-center bg-gray-50 p-2 rounded">
                                    <span class="text-gray-600"><%= record.timestamp %></span>
                                    <span class="font-semibold text-gray-800"><%= record.price %>€</span>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script>
        // Chart.js global defaults
        Chart.defaults.font.family = "'Inter', sans-serif";
        Chart.defaults.plugins.tooltip.backgroundColor = 'rgba(0, 0, 0, 0.8)';
        Chart.defaults.plugins.tooltip.padding = 12;
        Chart.defaults.plugins.tooltip.cornerRadius = 4;
        Chart.defaults.animation.duration = 1000;

        // Initialize charts for each route
        <% Object.entries(priceData).forEach(([routeId, data]) => { %>
            const ctx<%= routeId.replace(/-/g, '') %> = document.getElementById('chart-<%= routeId %>').getContext('2d');
            
            // Calculate price trend
            const prices<%= routeId.replace(/-/g, '') %> = <%- JSON.stringify(data.map(d => d.price)) %>;
            const trend<%= routeId.replace(/-/g, '') %> = prices<%= routeId.replace(/-/g, '') %>[prices<%= routeId.replace(/-/g, '') %>.length - 1] - prices<%= routeId.replace(/-/g, '') %>[0];
            const trendColor<%= routeId.replace(/-/g, '') %> = trend<%= routeId.replace(/-/g, '') %> > 0 ? 'rgb(239, 68, 68)' : 'rgb(34, 197, 94)';
            
            new Chart(ctx<%= routeId.replace(/-/g, '') %>, {
                type: 'line',
                data: {
                    labels: <%- JSON.stringify(data.map(d => d.timestamp)) %>,
                    datasets: [{
                        label: 'Price (€)',
                        data: prices<%= routeId.replace(/-/g, '') %>,
                        borderColor: trendColor<%= routeId.replace(/-/g, '') %>,
                        backgroundColor: trendColor<%= routeId.replace(/-/g, '') %> + '20',
                        borderWidth: 2,
                        tension: 0.4,
                        fill: true,
                        pointRadius: 4,
                        pointHoverRadius: 6,
                        pointBackgroundColor: trendColor<%= routeId.replace(/-/g, '') %>,
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: {
                        intersect: false,
                        mode: 'index'
                    },
                    scales: {
                        y: {
                            beginAtZero: false,
                            grid: {
                                color: 'rgba(0, 0, 0, 0.1)',
                                drawBorder: false
                            },
                            title: {
                                display: true,
                                text: 'Price (€)',
                                font: {
                                    weight: 'bold'
                                }
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            },
                            title: {
                                display: true,
                                text: 'Date',
                                font: {
                                    weight: 'bold'
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `Price: ${context.parsed.y}€`;
                                }
                            }
                        }
                    }
                }
            });
        <% }); %>
    </script>
</body>
</html> 